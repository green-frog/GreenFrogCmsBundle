<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{% block title %}{{ gf_cms.site.title }}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    {% block stylesheets %}{% endblock %}
    <link href="{{ asset('bundles/greenfrogcms/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/greenfrogcms/css/bootstrap-responsive.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/greenfrogcms/css/hook.css') }}" rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  </head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="{{ path('homepage') }}">{{ gf_cms.site.name }}</a>
          <div class="nav-collapse">
            {% set mainMenu = knp_menu_get('GreenFrogCmsBundle:Builder:mainMenu') %}
            {{ knp_menu_render(mainMenu, {}, 'main') }}
            <form class="navbar-search pull-left" action="">
                <input class="search-query span2" type="text" placeholder="Search">
                <button type="submit" class="btn btn-navbar-hook">Search</button>
            </form>
{% if app.user %}
            <div class="btn-group pull-right">
                <a class="btn btn-info" href="{{ path('fos_user_profile_show') }}"><i class="icon-user icon-white"></i> {{ app.user.username }}</a>
                <a class="btn btn-info dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="{{ path('fos_user_profile_edit') }}"><i class="icon-pencil"></i> Edit profile</a></li>
                    <li class="divider"></li>
                    <li><a href="{{ path('fos_user_security_logout') }}"><i class="i"></i> Log out</a></li>
                </ul>
            </div>
{% else %}
            <p class="navbar-text pull-right"><a href="{{ path('fos_user_registration_register') }}">Register</a> or <a href="{{ path('fos_user_security_login') }}">Log in</a></p>
{% endif %}
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span10">
          {% include "GreenFrogCmsBundle:Menu:breadcrumb.html.twig" %}
          {% block body %}{% endblock %}
        </div><!--/span-->
        <div class="span2">
          <div class="well sidebar-nav">
            {% set sidebarMenu = knp_menu_get('GreenFrogCmsBundle:Builder:sidebarMenu') %}
            {{ knp_menu_render(sidebarMenu, {}, 'sidebar') }}
          </div><!--/.well -->
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
        <p>&copy; Dota Reloaded 2012</p>
      </footer>

    </div><!--/.fluid-container-->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    {% block javascripts %}{% endblock %}
    <script src="{{ asset('bundles/greenfrogcms/js/jquery.js') }}"></script>
    <script src="{{ asset('bundles/greenfrogcms/js/google-code-prettify/prettify.js') }}"></script>
    <script src="{{ asset('bundles/greenfrogcms/js/greenfrog/interface.js') }}"></script>
    <script src="{{ asset('bundles/greenfrogcms/js/bootstrap.js') }}"></script>

  </body>
</html>
